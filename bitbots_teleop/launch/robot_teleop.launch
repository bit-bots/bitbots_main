<?xml version="1.0" encoding="utf-8" ?>
<launch>
    <arg name="type" default="noname"/> <!-- Sets the controller type e.g. noname, xbox -->
    <arg name="head" default="false"/>
    <node pkg="joy" exec="joy_node" name="joy_node" output="screen">
        <param name="deadzone" value="0.1"/>
        <param name="autorepeat_rate" value="10"/>
    </node>
    <node pkg="bitbots_teleop" exec="joy_node.py" name="joy_to_twist">
        <param name="type" value="$(var type)"/>
        <param name="head" value="$(var head)"/>
        <rosparam command="load" file="$(find-pkg-share bitbots_teleop)/config/controller.yaml" />
    </node>
</launch>