<?xml version="1.0"?>
<package>
  <name>bitbots_hcm</name>
  <version>1.0.0</version>
  <description>The bitbots_hcm package provides a state machine which controlls the current state of the robot.
  It will perform falling and standing-up handling by its own. It will also decide which other nodes can write motor
  goal positions.</description>

  <maintainer email="bestmann@informatik.uni-hamburg.de">Marc Bestmann</maintainer>
  <author email="bestmann@informatik.uni-hamburg.de">Marc Bestmann</author>
  <author email="info@bit-bots.de">Hamburg Bit-Bots</author>

  <license>BSD</license>


  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>std_msgs</build_depend>
  <build_depend>rospy</build_depend>
  <build_depend>humanoid_league_msgs</build_depend>
  <build_depend>bitbots_common</build_depend>
  <build_depend>dynamic_reconfigure</build_depend>

  <run_depend>std_msgs</run_depend>
  <run_depend>rospy</run_depend>
  <run_depend>humanoid_league_msgs</run_depend>
  <run_depend>bitbots_common</run_depend>
  <run_depend>dynamic_reconfigure</run_depend>

  <export>
    <bitbots_documentation>
      <language>python3</language>
      <status>unknown</status>
    </bitbots_documentation>
  </export>
</package>
